{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2018",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "code-equality-assertions": ["./src/index"],
      "code-equality-assertions/*": ["./src/*"],
      "*": ["./types/*"]
    }
  },
  "ts-node": {
    "esm": true
  }
}
